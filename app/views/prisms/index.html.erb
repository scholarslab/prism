<% title "Browse" %>

<%= link_to 'New prism', new_prism_path, :id => 'new-prism', :class => 'button' %>

<h1>Browse Prisms</h1>

<table cellpadding="0" cellspacing="0">
  <thead>
    <tr>
      <th>Title</th>
      <th>Highlight</th>
      <th>Visualize</th>
    </tr>

  </thead>

  <tbody>

  <% @prisms.each do |prism| %>
    <tr>

    <td><%= prism.title.html_safe %></td>

    <td class="highlight"> <%= link_to(highlight_path(prism), :class => 'highlight') do %>
      <%= image_tag('highlight_button.png') %>
    <% end %>
    </td>


    <td class="visualize">  <%= link_to(visualize_path(prism), :class => 'visualize') do %>
      <%= image_tag('visualize_button.png') %>
    <% end %>
    </td>

  </tr>
<% end %>


  </tbody>


</table>

<div id="pagination">
	<%= will_paginate @prisms %>
</div>
