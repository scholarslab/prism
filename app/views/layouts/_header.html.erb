<% if user_signed_in? %>
<div id="user_meta">
        <!-- The following code shows the user's email if they are signed in. !-->
          <%= current_user.email %> |
          <%= link_to t('header.sign_out'), destroy_user_session_path, :method => :delete, :id => 'sign-out' %>
        <!-- end. !-->
</div>

<% end %>

<nav>
  <ul>
    <li>
      <%= link_to t('header.link_about'), about_path, {:class => 'about_link'}  %>
    </li>
    <li>
      <%= link_to t('header.link_documents'), prisms_path, {:class => "browse_link"} %>
    </li>
    <li>
    <% if user_signed_in? %>
        <%= link_to 'myPrisms', users_path(current_user), {:class => "myprisms_link"} %>
    <% else %>
        <%= link_to t('header.sign_in'), new_user_session_path, {:class => "sign_in_link"} %>
    <% end %>
    </li>
  </ul>
</nav>

<header>
  <div class="header">

    <%= link_to image_tag('LOGO.png'), root_path %>
    <% if current_page?('/') %>
      <p class="motto">A Tool for Collaborative Interpretation of Texts</p>
      <p><%= link_to('A Note to Teachers', about_path(:anchor =>'note-to-teachers'), :class => 'note') %></p>
    <% end %>

  </div>

</header>



